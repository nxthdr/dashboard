{
    servers {
        metrics
    }
}

:80 {
    root * /www/html

    # Enable file server
    file_server

    # Handle SPA routing - serve index.html for any path that doesn't exist as a file
    try_files {path} /index.html

    # Add proper MIME types
    encode gzip
    header /assets/* {
        Cache-Control "public, max-age=31536000, immutable"
    }
}
